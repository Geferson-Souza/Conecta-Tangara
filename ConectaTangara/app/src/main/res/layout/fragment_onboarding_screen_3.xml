<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/honeydew"
        android:padding="32dp"
        tools:context=".fragments.OnboardingFragment">

<ImageView
android:id="@+id/iv_onboarding_image"
android:layout_width="200dp"
android:layout_height="200dp"
android:layout_marginTop="32dp"
android:contentDescription="@string/onboarding_image_desc_3"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_chainStyle="packed"
app:layout_constraintBottom_toTopOf="@+id/tv_onboarding_title"
app:srcCompat="@drawable/ic_onboarding_3" /> <!-- Use seu drawable real ic_onboarding_3 -->

<TextView
android:id="@+id/tv_onboarding_title"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="40dp"
android:gravity="center"
android:text="@string/onboarding_title_3"
android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="@color/berkeley_blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_onboarding_image"
        app:layout_constraintBottom_toTopOf="@+id/tv_onboarding_description" />

<TextView
android:id="@+id/tv_onboarding_description"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:gravity="center"
android:text="@string/onboarding_description_3"
android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/berkeley_blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_title"
        app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
